{
  "lock": false,
  "tasks": {
    "start": "deno run -A ./src/main/server.ts",
    "dev": "deno run -A --watch ./src/main/server.ts"
  },
  "imports": {
    "$express": "npm:express@4.18.2",
		"$socket": "npm:socket.io@4.7.1",

    "@app/": "./src/app/",
    "@core/": "./src/core/",
    "@infra/": "./src/infrastructure/",
    "@main/": "./src/main/",
    "@pre/": "./src/presentation/"
  },
  "fmt": {
    "useTabs": true,
    "indentWidth": 2,
    "lineWidth": 60,
    "semiColons": false,
    "singleQuote": false,
    "include": [
      "./src/**/*.ts"
    ],
    "exclude": [
      "data"
    ]
  },
  "compilerOptions": {
    "strict": true
  }
}